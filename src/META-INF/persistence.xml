<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="KioskPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>org.ubt.kiosk.entity.Student</class>
    <class>org.ubt.kiosk.entity.Group1</class>
    <class>org.ubt.kiosk.entity.Status</class>
    <class>org.ubt.kiosk.entity.Phone</class>
    <class>org.ubt.kiosk.entity.Room</class>
    <class>org.ubt.kiosk.entity.Subject</class>
    <class>org.ubt.kiosk.entity.Person</class>
    <class>org.ubt.kiosk.entity.Schedule</class>
    <class>org.ubt.kiosk.entity.Lecturer</class>
    <class>org.ubt.kiosk.entity.StudentGroup</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:sqlserver://localhost:1433;databaseName=Kiosk"/>
      <property name="javax.persistence.jdbc.user" value="Kiosk"/>
      <property name="javax.persistence.jdbc.driver" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
      <property name="javax.persistence.jdbc.password" value="123"/>
    </properties>
  </persistence-unit>
</persistence>
